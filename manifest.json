{
  "name": "A browser action which changes its icon when clicked",
  "description": "Change browser action color when its icon is clicked",
  "version": "1.2",
  "background": { "scripts": ["bg.js"] },
  "browser_action": {
      "name": "Click to change the icon's color"
  },
  "permissions": [
          "tabs",
        "notifications",
        "http://*/",
        "https://*/"
        ],	
  "manifest_version": 2
}
